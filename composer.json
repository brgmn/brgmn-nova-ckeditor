{
    "name": "brgmn/nova-ckeditor",
    "description": "Use CKEditor for Laravel Nova fields.",
    "keywords": [
        "brgmn",
        "nova-ckeditor"
    ],
    "homepage": "https://github.com/brgmn/nova-ckeditor",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Martin Br√ºggemann",
            "email": "info@brgmn.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Brgmn\\NovaCKEditor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brgmn\\NovaCKEditor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Brgmn\\NovaCKEditor\\FieldServiceProvider"
            ]
        }
    }
}
